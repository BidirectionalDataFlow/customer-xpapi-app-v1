http://www.mulesoft.org/schema/mule/api-gateway http://www.mulesoft.org/schema/mule/api-gateway/current/mule-api-gateway.xsd
http://www.mulesoft.org/schema/mule/db http://www.mulesoft.org/schema/mule/db/current/mule-db.xsd
http://www.mulesoft.org/schema/mule/os http://www.mulesoft.org/schema/mule/os/current/mule-os.xsd">
	<global-property doc:name="Global Property" doc:id="cf22eb51-1668-4a4f-96bf-616ef6af3690" name="env" value="local" />
	<configuration-properties doc:name="Configuration properties" doc:id="cfc27e78-f003-4125-81d3-54de2c64f25e" file="properties/${env}.yaml" />
    <http:listener-config name="api-httpListenerConfig">
        <http:listener-connection host="${http.host}" port="${http.port}" />
    </http:listener-config>
    <apikit:config name="api-config" api="api.raml" outboundHeadersMapName="outboundHeaders" httpStatusVarName="httpStatus" />
    
	<http:request-config name="HTTP_Request_configuration" doc:name="HTTP Request configuration" doc:id="449bf086-c788-47f5-af04-d1241e4583f1" responseTimeout="180000">
		<http:request-connection host="${papi.host}" port="${papi.port}" />
	</http:request-config>
   	<api-gateway:autodiscovery apiId="${autodiscoveryId}" ignoreBasePath="true" doc:name="API Autodiscovery" doc:id="d08c6450-8a1e-46a2-b182-611159ca05bc" flowRef="api-main" />
	
</mule>
